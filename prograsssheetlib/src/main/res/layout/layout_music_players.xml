<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginTop="3dp"
         android:layout_gravity="center_horizontal" />

    <LinearLayout
         android:layout_height="match_parent"
         android:layout_width="match_parent"
         android:gravity="center_horizontal|center_vertical"
         android:orientation="vertical"
         android:layout_gravity="center_horizontal">

        <com.google.android.material.card.MaterialCardView
             android:layout_height="300dp"
             android:layout_width="300dp"
             app:strokeColor="@android:color/transparent"
             android:layout_marginTop="8dp"
             app:cardForegroundColor="@android:color/transparent">

            <ImageView
                 android:layout_height="match_parent"
                 android:layout_width="match_parent"
                 android:scaleType="fitXY"
                 android:id="@+id/musicicon"
                 android:layout_gravity="center_horizontal|center_vertical" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="5dp"
             android:padding="8dp"
             android:textSize="20sp"
             android:layout_marginTop="5dp"
             android:focusable="false"
             android:id="@+id/titlemusic"
             android:layout_gravity="center_horizontal|center_vertical"
             android:text="Title" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:layout_marginBottom="16dp"
             android:padding="8dp"
             android:textSize="14sp"
             android:focusable="false"
             android:id="@+id/submusic"
             android:layout_gravity="center_horizontal|center_vertical"
             android:text="TextView" />

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:paddingHorizontal="24dp">

            <SeekBar
                 android:layout_height="48dp"
                 android:layout_width="match_parent"
                 android:maxHeight="48dp"
                 android:minHeight="48dp"
                 style="@style/MediaPlayer.ProgressBar"
                 android:id="@+id/musicseekbar" />

            <LinearLayout
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:gravity="center_vertical"
                 android:orientation="horizontal">

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:gravity="start"
                     android:padding="3dp"
                     android:textSize="14sp"
                     android:layout_marginStart="6dp"
                     android:layout_weight="1"
                     android:id="@+id/tvtr"
                     android:text="0:00" />

                <TextView
                     android:layout_height="wrap_content"
                     android:layout_width="0dp"
                     android:layout_marginEnd="6dp"
                     android:gravity="end"
                     android:padding="3dp"
                     android:textSize="14sp"
                     android:layout_weight="1"
                     android:id="@+id/tvname"
                     android:text="0:00" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:gravity="center"
             android:padding="24dp"
             android:orientation="horizontal">

            <LinearLayout
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:layout_marginEnd="15dp"
                 android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:scaleType="centerInside"
                     android:background="?attr/selectableItemBackgroundBorderless"
                     android:padding="15dp"
                     android:tint="?attr/colorPrimary"
                     app:srcCompat="@drawable/musicprevious"
                     android:id="@+id/pre" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="90dp"
                 android:layout_width="90dp"
                 android:layout_marginEnd="24dp"
                 android:background="@drawable/bg_pause_anim"
                 android:id="@+id/cardmusic">

                <com.google.android.material.button.MaterialButton
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     app:icon="@drawable/musicplay"
                     android:scaleType="centerInside"
                     app:iconSize="42dp"
                     app:backgroundTint="?attr/colorSecondaryContainer"
                     app:iconTint="?attr/colorOnSecondaryContainer"
                     android:tint="?attr/colorOnPrimary"
                     app:iconPadding="0dp"
                     android:id="@+id/play"
                     app:iconGravity="textStart" />

            </LinearLayout>

            <LinearLayout
                 android:layout_height="50dp"
                 android:layout_width="50dp"
                 android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                     android:layout_height="match_parent"
                     android:layout_width="match_parent"
                     android:scaleType="centerInside"
                     android:padding="15dp"
                     android:tint="?attr/colorPrimary"
                     app:srcCompat="@drawable/musicnext"
                     android:id="@+id/next" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>