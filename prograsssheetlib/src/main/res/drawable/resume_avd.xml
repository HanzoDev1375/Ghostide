<animated-vector
  xmlns:aapt="http://schemas.android.com/aapt"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <aapt:attr
    name="android:drawable">
    <vector
      android:height="128dp"
      android:viewportHeight="128"
      android:viewportWidth="128"
      android:width="128dp">
      <group
        android:name="main"
        android:pivotX="64"
        android:pivotY="64"
        android:scaleX="1"
        android:scaleY="1">
        <group
          android:name="top">
          <path
            android:fillColor="@android:color/black"
            android:name="top_path"
            android:pathData="M 44 32 L 44 64 L 100 64 L 100 64 Z"
            android:strokeLineCap="butt"
            android:strokeLineJoin="miter"
            android:strokeMiterLimit="10" />
        </group>
        <group
          android:name="bottom">
          <path
            android:fillColor="@android:color/black"
            android:name="bottom_path"
            android:pathData="M 44 96 L 44 64 L 100 64 L 100 64 Z"
            android:strokeLineCap="butt"
            android:strokeLineJoin="miter"
            android:strokeMiterLimit="10" />
        </group>
      </group>
    </vector>
  </aapt:attr>
  <target
    android:animation="@anim/rotate_90_animation"
    android:name="main" />
  <target
    android:animation="@anim/upper_play_to_pause_animation"
    android:name="top_path" />
  <target
    android:animation="@anim/bottom_play_to_pause_animation"
    android:name="bottom_path" />
</animated-vector>