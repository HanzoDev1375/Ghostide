<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RadioGroup
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">
        <RadioButton
                android:id="@+id/r1"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="WINDOW_POS_MODE_AUTO"
                android:textSize="14sp"
                android:textColor="?@attr/colorSecondary"/>
        <LinearLayout
            android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"/>
        <RadioButton
                android:id="@+id/r2"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="WINDOW_POS_MODE_FOLLOW_CURSOR_ALWAYS"
                android:textSize="14sp"
                android:textColor="?@attr/colorSecondary"/>
        <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"/>
        <RadioButton
                android:id="@+id/r3"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="WINDOW_POS_MODE_FULL_WIDTH_ALWAYS"
                android:textSize="14sp"
                android:textColor="?@attr/colorSecondary"/>
    </RadioGroup>
</LinearLayout>
